<Page x:Class="BeautySaloonWPF.View.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautySaloonWPF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid Background="Pink">

        <StackPanel Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="158,6,153,6">АВТОРИЗАЦИЯ:</TextBlock>
            <TextBlock Margin="184,0,174,0"><Run Text="Логин"/></TextBlock>
            <TextBox x:Name="LoginTextBox" TabIndex="0" Margin="90,0,90,0" >
            </TextBox>
            <TextBlock Margin="180
                       ,0,164,0"><Run Text="Пароль"/></TextBlock>
            <PasswordBox x:Name="PasswordPasswordBox" TabIndex="1" Margin="90,0" ></PasswordBox>
            <Button x:Name="SignInbutton" TabIndex="2" Click="SignInbuttonClick"  Height="29" Background="LightGreen" Margin="90,20" Content="Авторизация"/>

            <Button x:Name="RegButton" TabIndex="3" IsTabStop="True" Height="30" Background="LightGreen" Margin="90,1" Content="Регистрация" Click="RegButtonClick"></Button>
        </StackPanel>
    </Grid>
</Page>

