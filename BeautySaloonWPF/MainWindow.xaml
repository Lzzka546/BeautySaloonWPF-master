<Window x:Class="BeautySaloonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySaloonWPF"
        mc:Ignorable="d"
        Title="Салон красоты" Height="450" Width="800">


    <Grid Background="Pink">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="76" >
            <Button x:Name="Back_Button"  Opacity="0.8"  Content="Назад" Click="Back_Button_Click" Background="LightGreen"></Button>
            <Button x:Name="LogOutButton" Opacity="0.8" Content="Выйти" Click="LogOutButton_Click" Background="LightGreen" ></Button>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1"
                NavigationUIVisibility="Hidden"></Frame>
    </Grid>
    


        
    
    
</Window>
